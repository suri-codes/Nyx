# Disable conflicting Ghostty defaults to allow Zellij keybinds


# keybind = clear

# keybind = super+shift+,=reload

# Ghostty uses super+k for clear_screen, Zellij uses it for MoveFocus up
keybind = super+k=unbind
keybind = super+d=unbind
keybind = super+t=unbind
# Ghostty uses super+n for new_window, Zellij uses it for NewPane
keybind = super+n=unbind
# Ghostty uses super+left_bracket for goto_split:previous, Zellij uses Super+[ for PreviousSwapLayout
keybind = super+left_bracket=unbind
# Ghostty uses super+right_bracket for goto_split:next, Zellij uses Super+] for NextSwapLayout
keybind = super+right_bracket=unbind
# Ghostty uses super+up for jump_to_prompt:-1, Zellij uses it for MoveFocus up
keybind = super+up=unbind
# Ghostty uses super+down for jump_to_prompt:1, Zellij uses it for MoveFocus down
keybind = super+down=unbind
# Ghostty uses super+right for text:\x05, Zellij uses it for MoveFocusOrTab right
keybind = super+right=unbind
# Ghostty uses super+left for text:\x01, Zellij uses it for MoveFocusOrTab left
keybind = super+left=unbind
# Ghostty tab navigation conflicts with Zellij GoToTab
